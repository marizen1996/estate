<!--Mypage-->
<div class="container px-5 px-sm-0">
<div class="row">

  <!--ユーザー情報-->
  <div class="col-md-2">
    <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
       <p>Name
       <span><%= @user.name %></span>
       </p>
      <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
      <% if user_signed_in? && @user == current_user %>
      <% unless @user.email == "test@example.com" then %>
     <div class="mt-3">
        <%= link_to "退会",user_path(current_user.id), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
     </div>
      <% end %>
      <% end %>
  </div>


<div class="col-md-9 offset-md-1">
<!--%= render 'posts/list', posts: @posts %>-->
<%= render 'public/posts/list', posts: @posts %>

</div>
</div>
</div>


